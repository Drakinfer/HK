<h2>Se connecter</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => "w-75 flex-column-center"}) do |f| %>
    <div class="field mt-2 w-100 flex-column-center">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "w-50" %>
    </div>

    <div class="field mt-2 w-100 flex-column-center">
      <%= f.label "Mot de Passe" %><br />
      <%= f.password_field :password, autocomplete: "current-password", :class => "w-50" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-2 w-100 flex-column-center">
        <%= f.check_box :remember_me %>
        <%= f.label "Se souvenir de moi" %>
      </div>
    <% end %>

    <div class="actions w-100 mt-2 flex-column-center">
      <%= f.submit "Se connecter", {:class => "btn"} %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
