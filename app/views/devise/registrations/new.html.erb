<h2>S'inscrire</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => "w-75 flex-column-center"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mt-2 w-100 flex-column-center">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "w-50" %>
  </div>

  <div class="field mt-2 w-100 flex-column-center">
    <%= f.label "Pseudo" %>
    <%= f.text_field :pseudo, autofocus: true, autocomplete: "email", :class => "w-50" %>
  </div>

  <div class="field mt-2 w-100 flex-column-center">
    <%= f.label "Mot de Passe (6 charactÃ¨res minimum)"  %>
    <%= f.password_field :password, autocomplete: "new-password", :class => "w-50" %>
  </div>

  <div class="field mt-2 w-100 flex-column-center">
    <%= f.label "Confirmation du Mot de Passe" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "w-50" %>
  </div>

  <div class="actions w-100 mt-2 flex-column-center">
    <%= f.submit "S'incrire", {:class => "btn"} %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
