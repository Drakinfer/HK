<% url = admin_generations_path if action_name == "new" %>
<% method = :post if action_name == "new" %>

<% url = admin_generation_url if action_name == "edit" %>
<% method = :put if action_name == "edit" %>

<%= form_with model: @generation, url: url, method: method, data: { turbo: false } do |form| %>
  <div class="mb-2">
    <%= form.label "Nom" %><br>
    <%= form.text_field :name %>
  </div>

  <div class="mb-2">
    <%= form.label "Rang" %><br>
    <%= form.number_field :rank, :class => "mb-2" %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>